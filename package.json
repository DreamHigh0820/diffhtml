{
  "name": "diffhtml",
  "version": "0.0.5",
  "description": "",
  "main": "dist/diffhtml",
  "author": "Tim Branyen (@tbranyen)",
  "license": "MIT",
  "scripts": {
    "start": "http-server",
    "browserify": "browserify -s diff lib/index.js -o dist/diffhtml.js",
    "watchify": "watchify -d -s diff lib/index.js -o dist/diffhtml.js -v",
    "jshint": "jshint lib/*.js",
    "mocha": "mocha-phantomjs test/index.html",
    "istanbul": "istanbul instrument dist/diffhtml.js -o dist/diffhtml.coverage.js",
    "cov": "npm run browserify -- -t babelify -t browserify-istanbul && npm run mocha -- -k mocha-phantomjs-istanbul",
    "report": "istanbul report --root coverage --dir test/coverage lcov",
    "test": "npm run jshint && npm run cov #&& npm run report"
  },
  "devDependencies": {
    "babelify": "^6.1.3",
    "browserify": "^9.0.8",
    "browserify-istanbul": "^0.2.1",
    "http-server": "^0.8.0",
    "istanbul": "^0.3.13",
    "jshint": "^2.7.0",
    "mocha": "^2.2.4",
    "mocha-phantomjs": "^3.5.2",
    "mocha-phantomjs-istanbul": "0.0.2",
    "watchify": "^3.1.2"
  },
  "browserify": {
    "transform": [
      "babelify"
    ]
  }
}
